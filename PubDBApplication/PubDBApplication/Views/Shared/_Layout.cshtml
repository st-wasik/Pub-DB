<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PubDB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Addresses", "Index", "Addresses")</li>
                    <li>@Html.ActionLink("Producers", "Index", "ProducersViews")</li>
                    <li>@Html.ActionLink("Products", "Index", "ProductsViews")</li>
                    <li>@Html.ActionLink("Pubs", "Index", "PubsViews")</li>
                    <li>@Html.ActionLink("Orders", "Index", "OrdersViews")</li>
                    <li>@Html.ActionLink("Orders Details", "Index", "OrderDetailsViews")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.Exception == null)
        {

        }
        else
        {
            <h3> <font color="red">DB Server Exception</font></h3>
            <h5><font color="red">@ViewBag.Exception</font></h5>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PubDB</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
